{
    "type": "project",
    "name": "mangelio/web",
    "description": "improve issue management on construction sites ",
    "license": "MIT",
    "require": {
        "php": ">=7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/core": "^2.5",
        "composer/package-versions-deprecated": "^1.11",
        "doctrine/annotations": "^1.0",
        "doctrine/doctrine-bundle": "^2.1",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.7",
        "famoser/pdf-generator": "^0.2.0",
        "nelmio/cors-bundle": "^2.1",
        "phpdocumentor/reflection-docblock": "^5.2",
        "symfony/asset": "5.1.*",
        "symfony/console": "5.1.*",
        "symfony/dotenv": "5.1.*",
        "symfony/expression-language": "5.1.*",
        "symfony/flex": "^1.3.1",
        "symfony/form": "5.1.*",
        "symfony/framework-bundle": "5.1.*",
        "symfony/mailer": "5.1.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/property-access": "5.1.*",
        "symfony/property-info": "5.1.*",
        "symfony/requirements-checker": "^1.1",
        "symfony/security-bundle": "5.1.*",
        "symfony/serializer": "5.1.*",
        "symfony/translation": "5.1.*",
        "symfony/twig-bundle": "5.1.*",
        "symfony/validator": "5.1.*",
        "symfony/yaml": "5.1.*",
        "tecnickcom/tcpdf": "^6.3",
        "twig/cssinliner-extra": "^3.0",
        "twig/extra-bundle": "^3.0",
        "twig/inky-extra": "^3.0",
        "twig/twig": "^2.12|^3.0",
      "ext-json": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "famoser/agnes": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "sensiolabs/security-checker": "^6.0",
        "symfony/debug-bundle": "^5.1",
        "symfony/maker-bundle": "^1.21",
        "symfony/phpunit-bridge": "^5.1",
        "symfony/stopwatch": "^5.1",
        "symfony/var-dumper": "^5.1",
        "symfony/web-profiler-bundle": "^5.1",
        "symfony/webpack-encore-bundle": "^1.7"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "requirements-checker": "script",
            "security-checker security:check": "script"
        },
        "prepare-environment": [
            "touch .env.local",
            "vendor/bin/cghooks update",
            "php bin/console doctrine:migrations:migrate  --allow-no-migration --no-interaction",
            "php bin/console doctrine:fixtures:load --no-interaction"
        ],
        "download-translations": "lokalise --token=$LOKALISE_TOKEN export 893141675cbb100cd751c1.44777843 --type yml --unzip_to translations --use_original 1 --no_language_folders 1 --indentation 2sp --export_empty skip --plural_format symfony --placeholder_format symfony",
        "post-install-cmd": [
            "@auto-scripts",
            "@prepare-environment"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "@prepare-environment"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.1.*"
        },
        "hooks": {
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "./vendor/bin/php-cs-fixer fix",
                "yarn run lint-fix",
                "git update-index --again"
            ],
            "post-merge": "composer install"
        }
    }
}
