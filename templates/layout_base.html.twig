<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta lang="{{ app.request.locale }}">

    <!-- fav icons -->	
	<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
	<link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
	<link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
	<link rel="manifest" href="{{ asset('site.webmanifest') }}">
	<link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#343477">
	<meta name="msapplication-TileColor" content="#603cba">
	<meta name="theme-color" content="#ffffff">

    {% set title = block('title')|raw %}
    {% set description = block('description')|raw %}

    <title>{{ title }}</title>
    {% block stylesheets %}

    {% endblock %}


    <link rel="preload" href="{{ asset('dist/app.css') }}" as="style">
    <link rel="preload" href="{{ asset('dist/app.js') }}" as="script">

    <link rel="stylesheet" type="text/css" href="{{ asset('dist/app.css') }}"/>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <meta name="description" content="{{ description }}">
    <base href="/" target="_self">
</head>
<body>

<div id="outdated">
    <h6>{{ "outdated.your_browser_is_outdated"|trans({}, "framework") }}</h6>
    <p>{{ "outdated.update_to_view_correctly"|trans({}, "framework") }} <a id="btnUpdateBrowser" href="http://outdatedbrowser.com/">{{ "outdated.update_now"|trans({}, "framework") }}</a></p>
    <p class="last"><a href="#" id="btnCloseUpdateBrowser" title="Close">&times;</a></p>
</div>

{% set flashes = app.session.flashbag.all() %}
<div class="flash-wrapper">
    <div id="alert-template" class="hidden">
        <div id="ID" class="generated col-12 alert alert-ALERT_TYPE alert-dismissible fade show generated" role="alert">
            <div class="container text-center">
                MESSAGE
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
    {% if flashes|length > 0 %}
        {# flashbag #}
        {% for type, messages in flashes %}
            {% for message in messages %}
                <div class="col-12 alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    <div class="container text-center">
                        {{ message|raw }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
</div>

{% block content %}

{% endblock %}

<script src="{{ asset('dist/app.js') }}"></script>
{% block javascript %}

{% endblock %}
</body>
</html>
