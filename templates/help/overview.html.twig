{% extends "help/help_content_layout.html.twig" %}

{% block title %}{{ "overview.title"|trans }}{% endblock %}
{% block description %}{{ "overview.description"|trans }}{% endblock %}

{% trans_default_domain "help" %}

{% block help_content %}
    <article class="help">
        <h2>{{ "overview.create"|trans }}</h2>
        <p>{{ "overview.create_description"|trans }}</p>
        <img class="img-fluid" src="{{ asset('dist/images/1_erfassen.gif') }}" alt="{{ "overview.create_description"|trans }}">
        <h2>{{ "overview.populate"|trans }}</h2>
        <p>{{ "overview.populate_description"|trans }}</p>
        <img class="img-fluid" src="{{ asset('dist/images/2_einpflegen.gif') }}" alt="{{ "overview.populate_description"|trans }}">
        <h2>{{ "overview.manage"|trans }}</h2>
        <p>{{ "overview.manage_description"|trans }}</p>
        <img class="img-fluid" src="{{ asset('dist/images/3_verwalten.gif') }}" alt="{{ "overview.manage_description"|trans }}">
        <h2>{{ "overview.notify"|trans }}</h2>
        <p>{{ "overview.notify_description"|trans }}</p>
        <img class="img-fluid" src="{{ asset('dist/images/1_erfassen.gif') }}" alt="{{ "overview.notify_description"|trans }}">
        <h2>{{ "overview.wait"|trans }}</h2>
        <p>{{ "overview.wait_description"|trans }}</p>
        <img class="img-fluid" src="{{ asset('dist/images/1_erfassen.gif') }}" alt="{{ "overview.wait_description"|trans }}">
        <h2>{{ "overview.inspect"|trans }}</h2>
        <p>{{ "overview.inspect_description"|trans }}</p>
        <img class="img-fluid" src="{{ asset('dist/images/1_erfassen.gif') }}" alt="{{ "overview.inspect_description"|trans }}">
    </article>
    <p>
        <a class="btn btn-primary mt-5 mb-3" href="{{ path("switch") }}">
            {{ "overview.start"|trans }}
        </a>
    </p>
{% endblock %}