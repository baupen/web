{% trans_default_domain "email" %}
{% apply inky_to_html|inline_css(encore_entry_css_source('email')) %}
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "https://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
    <html xmlns="https://www.w3.org/1999/xhtml">
    <head>
        <!-- The character set should be utf-8 -->
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width" />
    </head>

    <body>
    <!-- Wrapper for the body of the email -->
    <table class="body" data-made-with-foundation>
        <tr>
            <!-- The class, align, and <center> tag center the container -->
            <td class="float-center" align="center" valign="top">
                <center>
                    {% apply inky_to_html %}
                        <spacer size="20"></spacer>
                        <center>
                            <img class="logo" src="{{ email.image('@images/logo.png') }}" alt="Logo">
                        </center>
                        <spacer size="20"></spacer>
                        <container>
                            <row>
                                <column small="12" large="12" class="content">
                                    {% block body %}

                                    {% endblock %}
                                </column>
                            </row>
                        </container>
                        <spacer size="10"></spacer>


                        <p class="text-center">
                            {{ "generated"|trans }}
                            <br>
                            <a href="{{ app.request.getSchemeAndHttpHost() }}">{{ app.request.getSchemeAndHttpHost() }}</a>
                            <br>
                            <a href="{{ absolute_url(path("email", {"identifier" : identifier })) }}">
                                {{ "mail_wrong_displayed"|trans }}
                            </a>
                        </p>

                        <p>
                            {% if sender_email is defined %}
                                {{ "sent_by"|trans }}
                                <a href="mailto:{{ sender_email }}">{{ sender_name }}</a>
                            {% else %}
                                <br>
                                {{ "questions"|trans }}
                                <a href="mailto:{{ env_support_email }}">{{ env_support_email }}</a>
                            {% endif %}
                        </p>
                    {% endapply %}
                </center>
            </td>
        </tr>
    </table>
    </body>
    </html>
{% endapply %}
